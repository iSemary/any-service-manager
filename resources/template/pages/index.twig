{% extends "base.twig" %}
{% block content %}
	<div class="card">
		<div class="card-body">
			<div class="row w-100">
				<div class="col-6">
					<ul class="list-group">
						<li class="list-group-item d-flex justify-content-between align-items-center">
							Operating System
							<span class="badge badge-primary badge-pill">
								{{ operating_system.name }}
							</span>
						</li>
						<li class="list-group-item d-flex justify-content-between align-items-center">
							Host
							<span class="badge badge-primary badge-pill">
								{{ operating_system.host }}
							</span>
						</li>
					</ul>
				</div>
				<div class="col-6">
					<canvas id="diskSpaceChart" data-free-space="{{ operating_system.disk.free_space }}" data-total-space="{{ operating_system.disk.total_space }}" width="400" height="200"></canvas>
				</div>
			</div>
			<hr/>
			<div class="row w-100">
				{% for package in packages %}
					<div class="col-3 bg-light text-center">
						<h6 class="font-weight-bold">{{ package.title }}</h6>
						<img src="{{ package.icon }}" class="img-muted" width="50px" height="50px" alt="{{ package.alt }}"/>
						<p class="text-muted mt-2">{{ package.status }}</p>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
{% endblock %}
