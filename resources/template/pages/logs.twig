{% extends "base.twig" %}
{% block content %}
	<div class="p-3">
		<div class="row">
			<div class="col-3">
				<h4>
					<i class="far fa-file-alt"></i>
					Logs
				</h4>
				<ul class="nav nav-tabs packages border-0" id="packageTabs" role="tablist">
					{% for package in packages %}
						<li class="nav-item">
							<a class="nav-link {{ uri_package is not null ? (uri_package == package ? " active nav-log-active" : " ") : (loop.index == 1 ? " active nav-log-active" : " ") }}" id="{{ package }}Tab" onclick="showLog('{{ package }}')" data-bs-toggle="tab" href="#{{ package }}" role="tab" data-package-name="{{ package }}" aria-selected="true">{{ package }}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-9">
				<div class="tab-content" id="packageTabsContent">
					{% for package in packages %}
						<div class="tab-pane fade show {{ uri_package is not null ? (uri_package == package ? " active" : " ") : (loop.index == 1 ? " active" : " ") }}" id="{{ package }}" role="tabpanel" aria-labelledby="{{ package }}Tab">
							<h5>
								{{ package }}
							</h5>
							<hr/>
							<div class="log-content">
								<code id="{{package}}Log">
									<div class="log-loader text-center">
										<span class="loader"></span>
									</div>
								</code>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
{% block scripts %}
	 <script src="/assets/scripts/pages/logs.js"></script>
{% endblock %}
