{% extends "base.twig" %}

{% block content %}
	<div class="p-3">
		<div class="row">
			<div class="card">
				<div class="card-header">
					<h2 class="card-title">PHP Configuration</h2>
				</div>
				<div
					class="card-body">
					{# File Selector #}
					<form method="POST" id="iniFileSelectorForm">
						<div class="mb-3">
							<label for="iniSelector" class="form-label">Select ini File</label>
							<select class="form-select" id="iniSelector" name="ini_file" required>
								<option value="" selected disabled>Select</option>
								{% for iniFile in ini_files %}
									<option value="{{ iniFile }}">{{iniFile}}</option>
								{% endfor %}
							</select>
						</div>
					</form>
					<hr/>
					{# File Editor #}
					<form method="POST" id="iniFileEditorForm">
						<div class="row form-inputs"></div>
						<div class="form-status"></div>
						<div class="form-group text-right">
							<button class="btn btn-success" type="submit">
								<i class="fas fa-save"></i>
								Save
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block scripts %}
	<script src="/assets/scripts/pages/php-configuration.js"></script>
{% endblock %}
